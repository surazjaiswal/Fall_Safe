<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back_view"
    android:layout_margin="5dp"
    android:id="@+id/fall_event_cardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_fall_event"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="8dp"
            android:src="@drawable/ic_fall"/>

        <TextView
            android:id="@+id/fall_event_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toStartOf="@+id/img_fall_event_delete"
            android:layout_toLeftOf="@+id/img_fall_event_delete"
            android:layout_toEndOf="@+id/img_fall_event"
            android:layout_toRightOf="@+id/img_fall_event"
            android:text="Date And Time"
            android:textColor="#00C853"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fall_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/fall_event_datetime"
            android:layout_alignBottom="@+id/img_fall_event"
            android:layout_toLeftOf="@+id/img_fall_event_delete"
            android:layout_toRightOf="@+id/img_fall_event"
            android:lines="4"
            android:text="Location of fall"
            android:textColor="#6E83FA"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_fall_event_share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_share"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp" />

        <ImageView
            android:id="@+id/img_fall_event_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/img_fall_event_share"
            android:src="@drawable/ic_delete"
            android:layout_toStartOf="@+id/img_fall_event_share" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>